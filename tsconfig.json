{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "outDir": "bin",
    "sourceMap": true,
    "declaration": true,
    "paths": {
      "ng2-datepicker": [
        "dist/ng2-date-picker/ng2-date-picker",
        "dist/ng2-date-picker"
      ]
    },
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jasmine"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "debug": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
  }
}
